{% extends 'base.html.twig' %}

{% block title %}
    Project index    
{% endblock %}
{% block body %}
    <h1>
    </h1>
    <div class="row">
            {% for project in projects %}
            <div class="col-sm-3">
                <div class="card text-center" style="width: 18rem;margin: 2em;">
                    <img src="/{{ project.image }}" class="card-img-top" alt="{{ project.image }}">
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ project.title }}
                            </h5> 
                            <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-outline-secondary">
                                Edit project                                                           
                            </a>
                            <hr class="py-1">
                            <div style="float:left;">
                                last updated
                            </div>
                            <div style="float:right;">
                                {{ project.numberOfTasks }} tasks
                            </div>                           
                        </div>
                    </div>
                </div>
            {% else %}
                        no records found
            {% endfor %}
        </div>
    <a href="{{ path('app_project_new') }}">
        Create new                
    </a>
{% endblock %}